# dr3am Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=dr3am
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=false

# Server
DR3AM_HOST=0.0.0.0
DR3AM_PORT=8000
DR3AM_WORKERS=1
DR3AM_RELOAD=false

# Database
DATABASE_URL=sqlite:///dr3am.db
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
SESSION_EXPIRE_SECONDS=3600

# Security
SECRET_KEY=your-secret-key-change-in-production-must-be-32-chars-minimum
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7
JWT_ALGORITHM=HS256

# CORS
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# API Keys
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=
NEWS_API_KEY=
AMAZON_API_KEY=
EBAY_API_KEY=

# API Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RATE_LIMIT_PER_DAY=1000
DAILY_API_BUDGET=10.0
MONTHLY_API_BUDGET=300.0

# LLM Configuration
LLM_MODEL=gpt-3.5-turbo
LLM_API_KEY=
LLM_BASE_URL=
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=2000

# Semantic Analysis
ANALYSIS_WINDOW_DAYS=30
MIN_MENTIONS_FOR_INTEREST=2
CONFIDENCE_THRESHOLD=0.6
MAX_INTERESTS_PER_ANALYSIS=10

# Research Execution
AUTO_RESEARCH_ENABLED=true
RESEARCH_COOLDOWN_HOURS=24
MAX_CONCURRENT_RESEARCH=3
RESEARCH_TIMEOUT_SECONDS=300
RETRY_ATTEMPTS=3

# Caching
ENABLE_CACHING=true
CACHE_TTL_HOURS=24
CACHE_MAX_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
ENABLE_STRUCTURED_LOGGING=true
LOG_TO_CONSOLE=true
LOG_TO_FILE=false

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1.0
ENABLE_REQUEST_TRACING=false

# Request Handling
MAX_REQUEST_SIZE=16777216
REQUEST_TIMEOUT=60